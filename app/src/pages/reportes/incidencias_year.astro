---
import Report from "../../layouts/Report.astro";
import Incidencias from "../../components/IncidenciasYear";

const months: Record<number, string> = {
    0: "ENE",
    5: "JUN",
    6: "JUL",
    7: "DIC"
}

const today = new Date();
const [start_month, end_month] = today.getMonth() > 5 ? [0, 5] : [6, 11];
const report_title = `Incidencias (${months[start_month]} - HOY)`;
---

<Report title="Incidencias" reporte={report_title}>
    <Incidencias client:load/>
</Report>